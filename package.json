{
  "name": "@mtucourses/frontend",
  "version": "0.1.0",
  "description": "",
  "repository": "git@github.com:Michigan-Tech-Courses/frontend.git",
  "author": "Max Isom <hi@maxisom.me>",
  "license": "MIT",
  "scripts": {
    "lint": "xo",
    "lint:fix": "xo --fix",
    "build": "next build",
    "start": "next start",
    "dev": "next dev"
  },
  "devDependencies": {
    "@types/node": "^14.14.19",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.17.0",
    "eslint-config-xo": "^0.33.1",
    "eslint-config-xo-typescript": "^0.37.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "xo": "^0.37.1"
  },
  "xo": {
    "plugins": [
      "unused-imports"
    ],
    "rules": {
      "import/extensions": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "unused-imports/no-unused-imports-ts": "error",
      "unused-imports/no-unused-vars-ts": [
        "warn",
        {
          "vars": "all",
          "varsIgnorePattern": "^_",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "xo --fix"
    ]
  },
  "dependencies": {
    "next": "^10.0.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
