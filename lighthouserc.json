{
  "ci": {
    "collect": {
      "staticDistDir": "./out"
    },
    "assert": {
      "assertMatrix": [
        {
          "matchingUrlPattern": "^((?!404).)*$",
          "preset": "lighthouse:recommended",
          "assertions": {
            "maskable-icon": "off",
            "content-width": "off",
            "non-composited-animations": "off",
            "unsized-images": "off",
            "unused-javascript": "off",
            "link-name": "off",
            "link-text": "off",
            "tap-targets": "off"
          }
        }
      ]
    }
  }
}
